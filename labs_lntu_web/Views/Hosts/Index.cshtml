@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hosts <span id="serverStatus">Loading...</span></h2>
        <button id="btnAdd" class="btn btn-primary">
            Add host
        </button>
    </div>

    <table class="table table-striped table-bordered" id="hostsTable">
        <thead class="table-light">
            <tr>
                <th style="width: 60px">Id</th>
                <th>Address</th>
                <th>Name</th>
                <th>Status</th>
                <th>Total success</th>
                <th>Total failures</th>
                <th>Total requests</th>
                <th>Average time</th>
                <th>Last time (ms)</th>
                <th>Failures sequence</th>
                <th style="width: 150px">Actions</th>
            </tr>
        </thead>
        <tbody id="hostsTableBody"></tbody>
    </table>
</div>

@* modal for create/update *@
<div class="modal fade" id="hostModal" tabindex="-1" aria-labelledby="hostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="hostModalLabel">Host</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="hostId" />
                <div class="mb-3">
                    <label for="hostName" class="form-label">Name</label>
                    <input type="text" id="hostName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="hostAddress" class="form-label">Address</label>
                    <input type="text" id="hostAddress" class="form-control" />
                </div>
                <div class="mb-3">
                    <div class="form-check form-switch cursor-pointer" role="button">
                        <input class="form-check-input" type="checkbox" role="switch" id="hostEnabled" checked>
                        <label class="form-check-label" for="hostEnabled">Start pinging</label>
                    </div>
                </div>
                <div class="text-danger" id="hostError"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveHost">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/hosts.js"></script>